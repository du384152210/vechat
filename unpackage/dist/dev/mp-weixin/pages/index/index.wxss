.top {
  position: relative;
  padding: 8rpx 32rpx;
  border-bottom: 2rpx solid #dddddd;
}
.top .idx_logo {
  position: absolute;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  width: 80rpx;
  height: 42rpx;
}
.top .top_avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.top .icon {
  width: 52rpx;
  height: 52rpx;
}
.list {
  height: calc(100% - 86rpx);
}
.list .item {
  padding: 20rpx 32rpx;
}
.list .item .list_avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
}
.list .item .num {
  position: absolute;
  top: 0;
  right: 0;
  transform: translate3d(50%, -50%, 0);
  padding: 0 10rpx;
  background: #ff5d5b;
  font-size: 24rpx;
  color: #fff;
  border-radius: 50%;
}