.search {
  position: relative;
  padding: 14rpx 36rpx;
  border-bottom: 2rpx solid #dddddd;
}
.search input {
  height: 60rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  background: #F3F4F6;
  padding: 0 80rpx 0 80rpx;
  line-height: 60rpx;
}
.search .clear_btn {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 50%;
  transform: translate3d(0, -50%, 0);
  right: 140rpx;
}
.search .search_btn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 60rpx;
  top: 50%;
  transform: translate3d(0, -50%, 0);
}
.search_list {
  height: calc(100% - 90rpx);
}
.search_list .search_row {
  padding: 20rpx 0;
  border-bottom: 2rpx dashed #dddddd;
}
.search_list .search_row .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  margin-right: 32rpx;
}
.search_list .search_row .btn {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}
.search_list .search_row:last-child {
  border-bottom: 0;
}